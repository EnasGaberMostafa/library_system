<p id="notice"><%= notice %></p>

<h1>Listing Borrowed Books</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Bookid</th>
      <th>Borrowdate</th>
      <th>Duedate</th>
      <th>Returndate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowed_books.each do |borrowed_book| %>
      <tr>
        <td><%= borrowed_book.userId %></td>
        <td><%= borrowed_book.bookId %></td>
        <td><%= borrowed_book.borrowDate %></td>
        <td><%= borrowed_book.dueDate %></td>
        <td><%= borrowed_book.returnDate %></td>
        <td><%= link_to 'Show', borrowed_book %></td>
        <td><%= link_to 'return', edit_borrowed_book_path(borrowed_book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

